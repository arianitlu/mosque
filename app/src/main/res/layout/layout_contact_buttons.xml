<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/nav_button_islamiNeWil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/txt_openWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center_horizontal"
            android:letterSpacing="0.01"
            android:text="www.moschee-wil.ch"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/textview_email_contact"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_open_email" />

        <TextView
            android:id="@+id/textview_contact2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center_horizontal"
            android:letterSpacing="0.01"
            android:text="Tel. +41 (0) 58 523 45 45"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/txt_open_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nav_button_islamiNeWil" />

        <TextView
            android:id="@+id/txt_open_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center_horizontal"
            android:letterSpacing="0.01"
            android:text="info@moschee-wil.ch"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/txt_openWeb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_contact2" />

        <TextView
            android:id="@+id/textview_email_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:text="\nImam Bekim Alimi:\nimam@moschee-wil.ch"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/img_facebook"
            app:layout_constraintEnd_toEndOf="@+id/nav_button_islamiNeWil"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/nav_button_islamiNeWil"
            app:layout_constraintTop_toBottomOf="@+id/txt_openWeb" />

        <ImageView
            android:id="@+id/img_facebook"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/fbicon1"
            app:layout_constraintEnd_toStartOf="@+id/img_instagram"
            tools:layout_editor_absoluteY="156dp" />

        <ImageView
            android:id="@+id/img_instagram"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/instaicon1"
            app:layout_constraintBottom_toBottomOf="@+id/img_facebook"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_facebook"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/img_youtube"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/icon_youtube"
            app:layout_constraintBottom_toBottomOf="@+id/img_facebook"
            app:layout_constraintStart_toEndOf="@+id/img_instagram"
            app:layout_constraintTop_toTopOf="@+id/img_facebook"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:text="Rosenstrasse 45, 9500 Wil SG"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/nav_button_islamiNeWil" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>