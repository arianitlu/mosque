<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/image_btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/don_rectangle_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_don_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Spendenkonto"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:fontFamily="@font/lato_semibold"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/image_btn_1"
            app:layout_constraintStart_toStartOf="@+id/image_btn_1"
            app:layout_constraintTop_toTopOf="@+id/image_btn_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center_horizontal"
            android:letterSpacing="0.01"
            android:textColor="#ffffff"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/image_btn_1"
            app:layout_constraintEnd_toEndOf="@+id/image_btn_1"
            app:layout_constraintStart_toStartOf="@+id/image_btn_1"
            tools:text="Islamischer Verein Wil
SWIFT-Nr: KBSGCH22
Clearing: 78119
IBAN: CH81 0078 1195 5346 9840 8" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/image_btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/don_rectangle_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/text_view_don_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Spenden über Telefon"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:fontFamily="@font/lato_semibold"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/image_btn_2"
            app:layout_constraintStart_toStartOf="@+id/image_btn_2"
            app:layout_constraintTop_toTopOf="@+id/image_btn_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center_horizontal"
            android:letterSpacing="0.01"
            android:textColor="#ffffff"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/image_btn_2"
            app:layout_constraintEnd_toEndOf="@+id/image_btn_2"
            app:layout_constraintStart_toStartOf="@+id/image_btn_2"
            tools:text="

Um telefonisch zu spenden rufen
Sie folgende Nummer an:

0900 10 20 10
" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/image_btn_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/don_rectangle_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_don_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Spenden über Paypal"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:fontFamily="@font/lato_semibold"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/image_btn_3"
            app:layout_constraintStart_toStartOf="@+id/image_btn_3"
            app:layout_constraintTop_toTopOf="@+id/image_btn_3" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:letterSpacing="0.01"
            android:textColor="#ffffff"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/image_btn_3"
            app:layout_constraintStart_toStartOf="@+id/image_btn_3"
            app:layout_constraintTop_toBottomOf="@+id/text_view_don_3"
            tools:text="Sie haben die Möglichkeit über
Paypal zu spenden:" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/image_btn_3"
            app:layout_constraintEnd_toEndOf="@+id/image_btn_3"
            app:layout_constraintStart_toStartOf="@+id/image_btn_3"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:srcCompat="@drawable/don_payment" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>